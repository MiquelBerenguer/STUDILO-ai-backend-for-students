# API Gateway Configuration
PORT=3000
NODE_ENV=development

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Redis Configuration (para rate limiting distribuido - lo usaremos despu√©s)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Services URLs (los configuraremos cuando tengamos los otros servicios)
AUTH_SERVICE_URL=http://localhost:3001
PROCESSOR_SERVICE_URL=http://localhost:3002
AI_SERVICE_URL=http://localhost:3003

# Logging
LOG_LEVEL=info

# CORS
CORS_ORIGIN=*