# ==========================================
# TutorIA - Environment Variables Template
# DANGER: DO NOT PUT REAL SECRETS IN THIS FILE
# ==========================================
NODE_ENV=development

# ------------------------------------------
# API & Services
# ------------------------------------------
API_GATEWAY_PORT=8000
AUTH_SERVICE_PORT=3001
PROCESSOR_SERVICE_PORT=8002
LEARNING_SERVICE_PORT=8001

# ------------------------------------------
# AI & External APIs (The "Brain" & "Eyes")
# ------------------------------------------
OPENAI_API_KEY=sk-proj-put-your-openai-api-key-here
GOOGLE_API_KEY=AIza-put-your-google-api-key-here

# ------------------------------------------
# PostgreSQL (Master & Replica)
# ------------------------------------------
POSTGRES_DB=tutor_ia
POSTGRES_USER=admin_user_dummy
POSTGRES_PASSWORD=super_secure_admin_password_here
POSTGRES_APP_USER=app_user_dummy
POSTGRES_APP_PASSWORD=super_secure_app_password_here
POSTGRES_REPL_USER=replica_user_dummy
POSTGRES_REPL_PASSWORD=super_secure_replica_password_here

# pgAdmin
PGADMIN_EMAIL=admin@tutoria.local
PGADMIN_PASSWORD=pgadmin_secure_password_here

# ------------------------------------------
# Redis Cluster (HA via Sentinel)
# ------------------------------------------
REDIS_PASSWORD=redis_super_secure_password_here

# ------------------------------------------
# RabbitMQ (Message Broker)
# ------------------------------------------
RABBITMQ_USER=rabbit_admin_dummy
RABBITMQ_PASSWORD=rabbit_secure_password_here

# ------------------------------------------
# MinIO (S3-Compatible Storage)
# ------------------------------------------
MINIO_USER=minio_admin_dummy
MINIO_PASSWORD=minio_secure_password_here

# ------------------------------------------
# Security & JWT
# ------------------------------------------
JWT_SECRET=generate-a-random-256-bit-secret-key-here
JWT_EXPIRATION=24h

# ------------------------------------------
# Monitoring (Grafana)
# ------------------------------------------
GRAFANA_PASSWORD=grafana_secure_password_here